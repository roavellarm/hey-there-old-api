{
  "env": { "browser": true, "es2020": true, "mocha": true },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": { "ecmaVersion": 11, "sourceType": "module" },
  "ignorePatterns": ["**/tests/**/*.spec.js"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": ["error", { "varsIgnorePattern": "should|expect" }]
  }
}
